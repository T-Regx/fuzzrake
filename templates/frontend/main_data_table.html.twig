<table id="artisans" class="table table-striped table-sm table-hover text-center">
    <thead class="thead-dark">
    <tr>
        <th class="text-left">Fursuit maker /&nbsp;studio name</th>
        <th class="hidden_data">Country</th>
        <th class="toggleable">Types</th>
        <th class="toggleable">Features</th>
        <th class="toggleable firstLink"></th>
        <th class="toggleableLink"></th>
        <th class="toggleableLink"></th>
        <th class="toggleableLink"></th>
        <th class="toggleableLink"></th>
        <th class="toggleableLink"></th>
    </tr>
    </thead>
    <tbody>
    {% for artisan in artisans %}
        <tr class="fursuit_maker">
            {%- spaceless %}
                <td class="text-left">
                    {{- artisan.name -}}
                    {%- if artisan.country -%}
                        {{ ' ' }}<span class="flag-icon flag-icon-{{ artisan.country|lower }}"></span>
                    {%- endif -%}
                </td>
                <td class="hidden_data country">
                    {%- if artisan.country -%}
                        {{ artisan.country|lower }}
                    {%- endif -%}
                </td>
                <td class="text-left">
                    {{- artisan.types -}}
                </td>
                <td class="text-left">
                    {{- artisan.features -}}
                </td>
                <td>
                    {%- if artisan.websiteUrl -%}
                        <a href="{{ artisan.websiteUrl }}"><i class="fas fa-link"></i></a>
                    {%- endif -%}
                </td>
                <td>
                    {%- if artisan.furAffinityUrl -%}
                        <a href="{{ artisan.furAffinityUrl }}"><img src="FurAffinity.svg" alt="FurAffinity" /></a>
                    {%- endif -%}
                </td>
                <td>
                    {%- if artisan.deviantArtUrl -%}
                        <a href="{{ artisan.deviantArtUrl }}"><i class="fab fa-deviantart"></i></a>
                    {%- endif -%}
                </td>
                <td>
                    {%- if artisan.twitterUrl -%}
                        <a href="{{ artisan.twitterUrl }}"><i class="fab fa-twitter"></i></a>
                    {%- endif -%}
                </td>
                <td>
                    {%- if artisan.facebookUrl -%}
                        <a href="{{ artisan.facebookUrl }}"><i class="fab fa-facebook"></i></a>
                    {%- endif -%}
                </td>
                <td>
                    {%- if artisan.tumblrUrl -%}
                        <a href="{{ artisan.tumblrUrl }}"><i class="fab fa-tumblr"></i></a>
                    {%- endif -%}
                </td>
            {% endspaceless -%}
        </tr>
    {% endfor %}
    </tbody>
</table>
