<div class="modal fade" id="filtersModal" tabindex="-1" role="dialog" aria-labelledby="filtersTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-lg-fzr" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filtersTitle">
                    Filters
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="accordion" id="filtersAccordion" role="tablist">
                    <div class="card" id="countriesFilter">
                        <div role="tab" class="card-header collapsed" id="headingOne" data-toggle="collapse" data-target="#countriesFilterBody" aria-expanded="false" aria-controls="countriesFilterBody">
                            Countries: <span class="status"></span>
                        </div>

                        <div id="countriesFilterBody" class="collapse" aria-labelledby="headingOne" data-parent="#filtersAccordion">
                            <div class="card-body">
                                {% include 'main/_filter_countries.html.twig' %}
                            </div>
                        </div>
                    </div>

                    <div class="card" id="languagesFilter">
                        <div role="tab" class="card-header collapsed" id="headingSeven" data-toggle="collapse" data-target="#languagesFilterBody" aria-expanded="false" aria-controls="languagesFilterBody">
                            Languages: <span class="status"></span>
                        </div>

                        <div id="languagesFilterBody" class="collapse" aria-labelledby="headingSeven" data-parent="#filtersAccordion">
                            <div class="card-body">
                                {% include 'main/_filter_multiselect.html.twig' with { itemName: 'lanugage', items: languages } %}
                            </div>
                        </div>
                    </div>

                    <div class="card" id="stylesFilter">
                        <div role="tab" class="card-header collapsed" id="headingTwo" data-toggle="collapse" data-target="#stylesFilterBody" aria-expanded="false" aria-controls="stylesFilterBody">
                            Styles: <span class="status"></span>
                        </div>
                        <div id="stylesFilterBody" class="collapse" aria-labelledby="headingTwo" data-parent="#filtersAccordion">
                            <div class="card-body">
                                {% include 'main/_filter_multiselect.html.twig' with { itemName: 'style', items: styles } %}
                            </div>
                        </div>
                    </div>

                    <div class="card" id="featuresFilter">
                        <div role="tab" class="card-header collapsed" id="headingThree" data-toggle="collapse" data-target="#featuresFilterBody" aria-expanded="false" aria-controls="featuresFilterBody">
                            Features: <span class="status"></span>
                        </div>
                        <div id="featuresFilterBody" class="collapse" aria-labelledby="headingThree" data-parent="#filtersAccordion">
                            <div class="card-body">
                                {% include 'main/_filter_multiselect.html.twig' with { itemName: 'feature', items: features } %}
                            </div>
                        </div>
                    </div>

                    <div class="card" id="orderTypesFilter">
                        <div role="tab" class="card-header collapsed" id="headingFour" data-toggle="collapse" data-target="#orderTypesFilterBody" aria-expanded="false" aria-controls="orderTypesFilterBody">
                            Order types: <span class="status"></span>
                        </div>
                        <div id="orderTypesFilterBody" class="collapse" aria-labelledby="headingFour" data-parent="#filtersAccordion">
                            <div class="card-body">
                                {% include 'main/_filter_multiselect.html.twig' with { itemName: 'orderType', items: orderTypes } %}
                            </div>
                        </div>
                    </div>

                    <div class="card" id="productionModelsFilter">
                        <div role="tab" class="card-header collapsed" id="headingFive" data-toggle="collapse" data-target="#productionModelsFilterBody" aria-expanded="false" aria-controls="productionModelsFilterBody">
                            Production models: <span class="status"></span>
                        </div>
                        <div id="productionModelsFilterBody" class="collapse" aria-labelledby="headingFive" data-parent="#filtersAccordion">
                            <div class="card-body">
                                {% include 'main/_filter_multiselect.html.twig' with { itemName: 'productionModel', items: productionModels } %}
                            </div>
                        </div>
                    </div>

                    <div class="card" id="commissionsStatusesFilter">
                        <div role="tab" class="card-header collapsed" id="headingSix" data-toggle="collapse" data-target="#commissionsStatusesFilterBody" aria-expanded="false" aria-controls="commissionsStatusesFilterBody">
                            Commissions status: <span class="status"></span>
                        </div>
                        <div id="commissionsStatusesFilterBody" class="collapse" aria-labelledby="headingSix" data-parent="#filtersAccordion">
                            <div class="card-body">
                                {% include 'main/_filter_multiselect.html.twig' with { itemName: 'commissionsStatuses', items: commissionsStatuses } %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-secondary" href="{{ filter_suggest_form_url }}" target="_blank">Suggest more filters</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hide</button>
            </div>
        </div>
    </div>
</div>
