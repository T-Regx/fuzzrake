        {{ form_widget(form.speciesDoes) }}
    </div>
    <div class="form-group">
        {{ form_label(form.speciesDoesnt) }}
        <p class="hint">Please: one specie (group) = one line.</p>
        {{ form_widget(form.speciesDoesnt) }}
