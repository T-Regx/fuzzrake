    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.features) }}
                {{ form_widget(form.features) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.otherFeatures) }}
