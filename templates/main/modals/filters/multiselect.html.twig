{% import "main/modals/filters/macros.html.twig" as macros %}

<fieldset>
    <div class="row">
        <div class="col-sm-12">
            {{  macros.fitler_all_none_invert('simple') }}

            {% for item in filter_data.specialItems %}
                {{ macros.filter_checkbox(group_name, item.idPart, item.value, item.label, item.count, '<i class="' ~ item.faIcon ~ '"></i>') }}
            {% endfor %}
        </div>
    </div>

    <div class="row">
        {% apply spaceless %}
            {% for item in filter_data.items %}
                <div class="col-sm-6 col-lg-3">
                    {{ macros.filter_checkbox(group_name, loop.index, item.value, item.label, item.count) }}
                </div>
            {% endfor %}
        {% endapply %}
    </div>
</fieldset>
