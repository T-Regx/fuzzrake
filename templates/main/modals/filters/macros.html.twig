{% macro filter_checkbox(group_name, value, label, count, label_html_prefix = '', label_html_suffix = '') %}
    {% set checkboxId = group_name ~ 'CheckBox' ~ get_global_counter().next() %}

    <input class="form-check-input" type="checkbox" id="{{ checkboxId }}" name="{{ group_name }}[]"
           value="{{ value }}" data-label="{{ label }}">

    <label class="form-check-label" for="{{ checkboxId }}">
        {{ label_html_prefix|raw }} {{ label }} {{ label_html_suffix|raw }}
        {% if count is not null %}<span class="count">({{ count }})</span>{% endif %}
    </label>
{% endmacro %}

{% macro filter_checkbox_wrapped(group_name, value, label, count, label_html_prefix = '') %}
    <div class="form-check form-check-inline">
        {{ _self.filter_checkbox(group_name, value, label, count, label_html_prefix) }}
    </div>
{% endmacro %}

{% macro filter_special_items_wrapped(filter_data, group_name) %}
    {% for item in filter_data.specialItems %}
        {{ _self.filter_checkbox_wrapped(group_name, item.value, item.label, item.count, '<i class="' ~ item.faIcon ~ '"></i>') }}
    {% endfor %}
{% endmacro %}

{% macro filter_all_none_invert(class) %}
    <span class="allNoneInvert {{ class }}" aria-hidden="true">
        select: <a data-action="all" href="">all</a>
        &bull; <a data-action="none" href="">none</a>
        &bull; <a data-action="invert" href="">invert</a>
    </span>
{% endmacro %}

{% macro ctrl_button(id_part, label) %}
    <div id="filter-ctrl-{{ id_part }}" class="btn-group my-1" role="group">
        <button data-bs-target="#filter-body-{{ id_part }}" class="btn btn-outline-secondary" data-bs-toggle="collapse">
            {{ label }}: <span class="status"></span>
        </button>
        <button type="button" class="filter-ctrl-remove btn btn-outline-danger">
            <i class="fas fa-trash-alt"></i>
        </button>
    </div>
{% endmacro %}

{% macro body_other(group_name, helphints_tpl, body_tpl, filters) %}
    <div id="filter-body-{{ group_name }}" class="collapse" data-bs-parent="#filters-parents">
        {{ include('main/modals/filters/helphints/' ~ helphints_tpl) }}
        {{ include('main/modals/filters/' ~ body_tpl, { filters: filters }) }}
    </div>
{% endmacro %}

{% macro body_multiselect(group_name, helphints_tpl, filter_data) %}
    <div id="filter-body-{{ group_name }}" class="collapse" data-bs-parent="#filters-parents">
        {{ include('main/modals/filters/helphints/' ~ helphints_tpl) }}
        {{ include('main/modals/filters/multiselect.html.twig') }}
    </div>
{% endmacro %}
