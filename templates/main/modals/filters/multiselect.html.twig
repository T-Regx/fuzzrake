<fieldset>
    <div class="row">
        <div class="col-sm-12">
            <span class="allNoneInvert allNoneInvertSimple" aria-hidden="true">
                select: <a data-action="all" href="">all</a>
                &bull; <a data-action="none" href="">none</a>
                &bull; <a data-action="invert" href="">invert</a>
            </span>

            {% if items.isHasUnknown %}
                <div class="form-check form-check-inline">
                    <input class="form-check-input" name="{{ itemName ~ 's[]' }}" type="checkbox" id="{{ itemName ~ 'CheckBoxUnknown' }}" value="?" data-label="Unknown" />
                    <label class="form-check-label" for="{{ itemName ~ 'CheckBoxUnknown' }}">
                        <i class="fas fa-question-circle"></i> Unknown <span class="count">({{ items.unknownCount }})</span>
                    </label>
                </div>
            {% endif %}

            {% if items.isHasOther %}
                <div class="form-check form-check-inline">
                    <input class="form-check-input" name="{{ itemName ~ 's[]' }}" type="checkbox" id="{{ itemName ~ 'CheckBoxOther' }}" value="*" data-label="Other" />
                    <label class="form-check-label" for="{{ itemName ~ 'CheckBoxOther' }}">
                        <i class="fas fa-asterisk"></i> Other <span class="count">({{ items.otherCount }})</span>
                    </label>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row">
        {% apply spaceless %}
            {% for item in items.items %}
                {% set checkboxId = itemName ~ 'CheckBox' ~ loop.index %}

                <div class="col-sm-6 col-lg-3">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="{{ item.value ~ 's[]' }}" type="checkbox" id="{{ checkboxId }}" value="{{ item.value }}" data-label="{{ item.label }}" />
                        <label class="form-check-label" for="{{ checkboxId }}">{{ item.label }} <span class="count">({{ item.count }})</span></label>
                    </div>
                </div>
            {% endfor %}
        {% endapply %}
    </div>
</fieldset>
