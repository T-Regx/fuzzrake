<?php

$finder = PhpCsFixer\Finder::create()
    ->in(__DIR__)
    ->exclude('var')
;

return PhpCsFixer\Config::create()
    ->setRules([
        '@Symfony' => true,
        'binary_operator_spaces' => [
            'operators' => ['=>' => 'align_single_space'],
        ],
        'array_syntax' => ['syntax' => 'short'],
    ])
    ->setFinder($finder)
;
