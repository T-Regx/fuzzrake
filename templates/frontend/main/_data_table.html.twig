<table id="artisans" class="table table-striped table-sm table-hover text-center">
    <thead class="thead-dark">
    <tr>
        <th class="text-left">Fursuit maker /&nbsp;studio name</th>
        <th class="hidden-data">Formerly</th>
        <th class="hidden-data">Intro</th>
        <th class="hidden-data">Since</th>
        <th class="hidden-data">Country</th>
        <th class="hidden-data">State</th>
        <th class="hidden-data">City</th>
        <th class="toggleable no-sorting">Styles</th>
        <th class="hidden-data">Other styles</th>
        <th class="toggleable no-sorting default-hidden">Types</th>
        <th class="hidden-data">Other types</th>
        <th class="toggleable no-sorting default-hidden">Features</th>
        <th class="hidden-data">Other features</th>
        <th class="hidden-data">FursuitReview URL</th>
        <th class="hidden-data">Website URL</th>
        <th class="hidden-data">FurAffinity URL</th>
        <th class="hidden-data">DeviantArt URL</th>
        <th class="hidden-data">Twitter URL</th>
        <th class="hidden-data">Facebook URL</th>
        <th class="hidden-data">Tumblr URL</th>
        <th class="hidden-data">Instagram URL</th>
        <th class="hidden-data">YouTube URL</th>
        <th class="hidden-data">CST URL</th>
        <th class="hidden-data">Queue URL</th>
        <th class="hidden-data">Notes</th>
        <th class="toggleable">Commissions</th>
        <th class="hidden-data">Commissions last check</th>
        <th class="no-sorting">Links</th>
    </tr>
    </thead>

    <tbody>
    {% for artisan in artisans %}
        <tr class="fursuit-maker">
            {%- spaceless %}
                <td class="text-left align-middle" data-toggle="modal" data-target="#artisanDetailsModal">
                    {{- artisan.name -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.formerly -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.intro -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.since -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.country -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.state -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.city -}}
                </td>
                <td class="text-left small align-middle" data-toggle="modal" data-target="#artisanDetailsModal">
                    {{- artisan.styles -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.otherStyles -}}
                </td>
                <td class="text-left small align-middle" data-toggle="modal" data-target="#artisanDetailsModal">
                    {{- artisan.types -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.otherTypes -}}
                </td>
                <td class="text-left small align-middle" data-toggle="modal" data-target="#artisanDetailsModal">
                    {{- artisan.features -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.otherFeatures -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.fursuitReviewUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.websiteUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.furAffinityUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.deviantArtUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.twitterUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.facebookUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.tumblrUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.instagramUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.youtubeUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.commisionsQuotesCheckUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.queueUrl -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.notes -}}
                </td>
                <td class="align-middle" data-toggle="modal" data-target="#artisanDetailsModal">
                    {{- artisan.areCommissionsOpen is null ? '' : (artisan.areCommissionsOpen ? 'open' : 'closed') -}}
                </td>
                <td class="hidden-data">
                    {{- artisan.commissionsQuotesLastCheck|date('Y-m-d H:i') -}}
                </td>
                <td class="text-right align-middle"></td>
            {% endspaceless -%}
        </tr>
    {% endfor %}
    </tbody>
</table>
