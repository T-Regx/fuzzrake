{% import "main/modals/filters/macros.html.twig" as macros %}

<fieldset>
    <div class="row">
        <div class="col-sm-12">
            {{  macros.fitler_all_none_invert('simple') }}

            {% if filter_data.isHasUnknown %}
                {{ macros.filter_checkbox(group_name, '_u', '?', 'Unknown', filter_data.unknownCount, '<i class="fas fa-question-circle"></i>') }}
            {% endif %}

            {% if filter_data.isHasOther %}
                {{ macros.filter_checkbox(group_name, '_o', '*', 'Other', filter_data.otherCount, '<i class="fas fa-asterisk"></i>') }}
            {% endif %}
        </div>
    </div>

    <div class="row">
        {% apply spaceless %}
            {% for item in filter_data.items %}
                <div class="col-sm-6 col-lg-3">
                    {{ macros.filter_checkbox(group_name, loop.index, item.value, item.label, item.count) }}
                </div>
            {% endfor %}
        {% endapply %}
    </div>
</fieldset>
