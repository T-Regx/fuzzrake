{% extends '_base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('main') }}
    <script>
        {% include 'main/_data_array.js.twig' %}
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('main') }}
{% endblock %}

{% block body %}
    {% include 'main/_intro.html.twig' %}
    {% include 'main/_filters_modal.html.twig' %}
    {% include 'main/_artisan_modal.html.twig' %}
    {% include 'main/_update_request_modal.html.twig' %}

    <div id="processingData" class="alert alert-primary" role="alert">
        The data is being processed. This may take several seconds. If it's stuck for
        <strong>more than half a minute</strong>, you may want to try:

        <ul>
            <li>refreshing the page / clearing the cache</li>
            <li>using the "incognito mode"</li>
            <li>using other browser or device</li>
        </ul>
    </div>

    <div id="dataProcessed" style="display: none;">
        {% include 'main/_data_table.html.twig' %}
    </div>

    <div class="container text-center">
        <img src="{{ asset('images/website-banner-bottom.png') }}" class="img-fluid" alt="">
    </div>
{% endblock %}
